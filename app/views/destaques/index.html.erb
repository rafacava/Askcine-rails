<% if current_user && current_user.admin %>

<header>
   <%= render 'layouts/header-adm' %>
</header>

<div class="container">
<p id="notice"><%= notice %></p>

<h2>Destaques</h2>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Imagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @destaques.each do |destaque| %>
      <tr>
        <td><%= destaque.titulo %></td>
        <td><%= destaque.imagem %></td>
        <td><%= link_to 'Ver', destaque %></td>
        <td><%= link_to 'Editar', edit_destaque_path(destaque) %></td>
        <td><%= link_to 'Excluir', destaque, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Inserir Destaque', new_destaque_path %>
</div>
   <%= render 'layouts/footer' %>
<% else %>
   <%= render 'layouts/valida' %>
<% end %>