<%= render 'layouts/header' %>
<div>
    <div class="container center-align">
    <h1>Busca por filmes</h1>
        <div class="row">
        <%= form_tag(buscafilmes_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
        <%= submit_tag "Search", :class => 'btn-large black' %>
        <% end %>
        </div>
    </div>
            <% if @filmes.present? %>
                <div class="row fundoindex center-align">
                   <h2>Resultado     da busca: <%= params[:search] %></h2>
                         <%= render 'layouts/filmeindex' %>
                </div>
                
   <%= render 'layouts/footer' %>
            <% else %>
             <div class="row fundoindex center-align">
                   <h2>Resultado     da busca: <%= params[:search] %></h2>
            <h4 id="toast">A expressão : <%= params[:search] %> não está em nenhum titulo de filme em nosso banco de dados</h4>
           <script>
               
                $(document).ready(function(){
                    M.toast({html: 'Filme não encontrado', classes:'large rounded'})
                });
           </script>       
           </div>
   <%= render 'layouts/footer' %>
            <% end %>
        
</div>