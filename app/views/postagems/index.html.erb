<% if current_user && current_user.admin %>

<header>
   <%= render 'layouts/header-adm' %>
</header>

<p id="notice"><%= notice %></p>

<h1>Postagems</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Conteudo</th>
      <th>Imagem</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postagems.each do |postagem| %>
      <tr>
        <td><%= postagem.titulo %></td>
        <td><%= postagem.conteudo %></td>
        <td><img src="<%= postagem.imagem %>" alt="Poster de noticia" width="200"></td>
        <td><%= postagem.user.username %></td>
        <td><%= link_to 'Show', postagem %></td>
        <td><%= link_to 'Edit', edit_postagem_path(postagem) %></td>
        <td><%= link_to 'Destroy', postagem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Postagem', new_postagem_path %>

<% else %>
   <%= render 'layouts/valida' %>
<% end %>

</div>
   <%= render 'layouts/footer' %>