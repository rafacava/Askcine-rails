<%= render 'layouts/header' %>
  <% @filmes.each do |filme| %> 
<div class="container align-center">  
  <div class="row">
   <div class="col s12 black-text"><h2><%= filme.nome %></h2></div>   
  </div>
  
  <div class="row">
      <div class="col s6">
          <ul>
              <li>
                      <strong>Filme:</strong>
                      <%= filme.nome %>
              </li>
              <li>
                      <strong>Ano:</strong>
                      <%= filme.ano %>
              </li>
              <li>
                      <strong>Diretor:</strong>
                      <%= filme.diretor %>
              </li>
              <li>
                      <strong>Sinopse:</strong>
                      <%= filme.sinopse %>
              </li>
              <li>
                    <p><%= link_to 'Ver SessÃµes do filme', sessoes_filme_path(:id => filme) %></p>
                      
                    <p><%= link_to 'Comentar filme', new_comentafilme_path %></p>
              </li>
          </ul>
     </div>
  <div class="col s6"><img class="center-align"  src="<%= filme.imagem %>" alt="Poster do filme <%= filme.nome %>">
  </div>
  </div>
</div>
          
    <% end %>
    
    <div class="row">
        <h2>Comentarios</h2>
    </div>
    
  <% @comentafilmes.each do |comentafilme| %> 
<div class="container center-align comentario">    
    <div class="row titulo">
        <h3><%= comentafilme.titulo %></h3>
        <h4>Por:<%= comentafilme.user.username %></h4>
    </div>
    <div class="row conteudo">
        <p><%= comentafilme.comentario %> </p>
    </div>
</div>    
<% end %>
    
<%= render 'layouts/footer' %>

