<header>
   <%= render 'layouts/header-adm' %>
</header>
<p id="notice"><%= notice %></p>
<h1>Filmes</h1>

<table>
  <thead>
    <tr>
      <th>Cd filme</th>
      <th>Nome</th>
      <th>Ano</th>
      <th>Diretor</th>
      <th>Categoria</th>
      <th>Sinopse</th>
      <th>Imagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @filmes.each do |filme| %>
      <tr>
        <td><%= filme.cd_filme %></td>
        <td><%= filme.nome %></td>
        <td><%= filme.ano %></td>
        <td><%= filme.diretor %></td>
        <td><%= filme.categoria %></td>
        <td><%= filme.sinopse %></td>
        <td><%= filme.imagem %></td>
        <td><%= link_to 'Show', filme %></td>
        <td><%= link_to 'Edit', edit_filme_path(filme) %></td>
        <td><%= link_to 'Destroy', filme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Filme', new_filme_path %>
