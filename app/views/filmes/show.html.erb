<header>
   <%= render 'layouts/header-adm' %>
</header>

<p id="notice"><%= notice %></p>

<div class="filmes1">
  
   <h2>Visualizar Filme</h2> 
   
<p>
  <strong>Nome:</strong>
  <%= @filme.nome %>
</p>

<p>
  <strong>Ano:</strong>
  <%= @filme.ano %>
</p>

<p>
  <strong>Diretor:</strong>
  <%= @filme.diretor %>
</p>

<p>
  <strong>Categoria:</strong>
  <%= @filme.categoria %>
</p>

<p>
  <strong>Sinopse:</strong>
  <%= @filme.sinopse %>
</p>

<p>
  <strong>Imagem:</strong>
  <img src="<%= @filme.imagem %>" alt="<%= @filme.nome %>">
</p>

<%= link_to 'Editar', edit_filme_path(@filme) %> |
<%= link_to 'Voltar', filmes_path %>
</div>

<footer>
   <%= render 'layouts/footer' %>
</footer>
