<% if current_user && current_user.admin %>

<header>
   <%= render 'layouts/header-adm' %>
</header>

<h2>Cinemas</h2>
<div class="container">
<table class="highlight">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereco</th>
      <th>Imagem</th>
      <th>Fachada</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Cidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cinemas.each do |cinema| %>
      <tr>
        <td><%= cinema.nome %></td>
        <td><%= cinema.endereco %></td>
        <td><%= cinema.imagem %></td>
        <td><%= cinema.fachada %></td>
        <td><%= cinema.lat %></td>
        <td><%= cinema.long %></td>
        <td><%= cinema.cidade.nome %></td>
        <td><%= link_to 'Show', cinema %></td>
        <td><%= link_to 'Edit', edit_cinema_path(cinema) %></td>
        <td><%= link_to 'Destroy', cinema, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Inserir Cinema', new_cinema_path %>
<br><br><br><br>


</div>
   <%= render 'layouts/footer' %>
<% else %>
   <%= render 'layouts/valida' %>
<% end %>

